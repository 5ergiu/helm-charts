# ============================================================================
# Local Secrets Example
# ============================================================================
# Copy this file to secrets.local.yaml and fill in your real credentials
# secrets.local.yaml is gitignored and will never be committed
#
# Usage:
#   cp secrets.local.yaml.example secrets.local.yaml
#   # Edit secrets.local.yaml with your credentials
#   # Use with: helm install -f values.local.yaml -f secrets.local.yaml
# ============================================================================

nextjs:
  secrets:
    # NOTE: Next.js local development typically doesn't require external services
    # The application runs standalone without database or cache dependencies

    # NextAuth.js secret (generate with: openssl rand -base64 32)
    NEXTAUTH_SECRET: ""

    # AWS credentials (only if using S3 for file storage)
    AWS_ACCESS_KEY_ID: ""
    AWS_SECRET_ACCESS_KEY: ""

    # SMTP credentials (only if using email functionality)
    SMTP_USER: ""
    SMTP_PASSWORD: ""

    # Database password (optional, only if connecting to external database)
    DATABASE_PASSWORD: ""

    # Redis password (optional, only if using Redis for caching)
    REDIS_PASSWORD: ""
