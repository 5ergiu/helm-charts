# ============================================================================
# Local Secrets Example
# ============================================================================
# Copy this file to secrets.yaml and fill in your real credentials
# secrets.yaml is gitignored and will never be committed
#
# Usage:
#   cp secrets.yaml.example secrets.yaml
#   # Edit secrets.yaml with your credentials
#   # Use with: helm install -f values.local.yaml -f secrets.yaml
# ============================================================================

laravel:
  secrets:
    # Application key (generate with: php artisan key:generate --show)
    APP_KEY: ""

    # Database connection URL (recommended)
    # PostgreSQL: postgresql://user:password@host:port/database?sslmode=require
    # MySQL: mysql://user:password@host:port/database
    # To use individual DB_* variables, set this to "" and add them in values file
    DATABASE_URL: ""

    # Redis connection URL (recommended)
    # Format: redis://default:password@host:port (or rediss:// for TLS)
    # To use individual REDIS_* variables, set this to "" and add them in values file
    REDIS_URL: ""

    # Cloud storage credentials (only if using S3)
    AWS_ACCESS_KEY_ID: ""
    AWS_SECRET_ACCESS_KEY: ""

    # Mail credentials (only if using SMTP)
    MAIL_USERNAME: ""
    MAIL_PASSWORD: ""

    # Pusher credentials (only if using broadcasting)
    PUSHER_APP_ID: ""
    PUSHER_APP_KEY: ""
    PUSHER_APP_SECRET: ""
