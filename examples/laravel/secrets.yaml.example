# ============================================================================
# Local Secrets Example
# ============================================================================
# Copy this file to secrets.yaml and fill in your real credentials
# secrets.yaml is gitignored and will never be committed
#
# Usage:
#   cp secrets.yaml.example secrets.yaml
#   # Edit secrets.yaml with your credentials
#   # Use with: helm install -f values.local.yaml -f secrets.yaml
# ============================================================================

laravel:
  secrets:
    # Application key (generate with: php artisan key:generate --show)
    APP_KEY: "base64:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA="

    # Database Configuration - PostgreSQL (Neon.tech)
    # Option 1: Use DATABASE_URL (recommended - takes precedence)
    DATABASE_URL: ""
    # Option 2: Individual variables (used as fallback if DATABASE_URL is empty)
    DB_HOST: ""
    DB_USERNAME: ""
    DB_PASSWORD: ""

    # Redis Configuration (Upstash)
    # Option 1: Use REDIS_URL (recommended - takes precedence)
    REDIS_URL: ""
    # Option 2: Individual variables (used as fallback if REDIS_URL is empty)
    # Note: For Upstash, include the scheme (tls://) in the host when using individual vars
    REDIS_HOST: ""
    REDIS_PASSWORD: ""

    # AWS credentials (only if using S3 for file storage)
    AWS_ACCESS_KEY_ID: ""
    AWS_SECRET_ACCESS_KEY: ""

    # Pusher credentials (only if using broadcasting)
    PUSHER_APP_ID: ""
    PUSHER_APP_KEY: ""
    PUSHER_APP_SECRET: ""
