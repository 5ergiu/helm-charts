# ============================================================================
# Local Secrets Example
# ============================================================================
# Copy this file to secrets.local.yaml and fill in your real credentials
# secrets.local.yaml is gitignored and will never be committed
#
# Usage:
#   cp secrets.local.yaml.example secrets.local.yaml
#   # Edit secrets.local.yaml with your credentials
#   # Use with: helm install -f values.local.yaml -f secrets.local.yaml
# ============================================================================

laravel:
  secrets:
    # Application key (generate with: php artisan key:generate --show)
    APP_KEY: "base64:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA="

    # NOTE: Local development uses SQLite and file-based drivers by default
    # No database or Redis needed for getting started!

    # AWS credentials (only if using S3 for file storage)
    AWS_ACCESS_KEY_ID: ""
    AWS_SECRET_ACCESS_KEY: ""

    # Pusher credentials (only if using broadcasting)
    PUSHER_APP_ID: ""
    PUSHER_APP_KEY: ""
    PUSHER_APP_SECRET: ""
