# Local-only secrets file
# Copy this file to secrets.local.yaml and add your real credentials
# secrets.local.yaml is gitignored and will never be committed
#
# Usage:
#   cp secrets.local.yaml.example secrets.local.yaml
#   # Edit secrets.local.yaml with your real credentials

laravel:
  secrets:
    # Application key (generate with: php artisan key:generate --show)
    APP_KEY: "base64:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA="

    # Database credentials
    DB_HOST: "mysql.example.com"
    DB_USERNAME: "laravel"
    DB_PASSWORD: "your-database-password"

    # Redis URL (includes host, port, password, and TLS scheme)
    # Format: rediss://[username]:[password]@[host]:[port]
    # Example with Upstash: rediss://default:AVBdAAInc...@your-redis.upstash.io:6379
    REDIS_URL: "rediss://default:your-redis-password@redis.example.com:6379"

    # AWS credentials (if using S3)
    AWS_ACCESS_KEY_ID: ""
    AWS_SECRET_ACCESS_KEY: ""

    # Mail credentials
    MAIL_USERNAME: ""
    MAIL_PASSWORD: ""

    # Pusher credentials (if using broadcasting)
    PUSHER_APP_ID: ""
    PUSHER_APP_KEY: ""
    PUSHER_APP_SECRET: ""
